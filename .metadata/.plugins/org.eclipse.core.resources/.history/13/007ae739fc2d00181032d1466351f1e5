import java.io.File;
import java.io.IOException;
import java.util.Scanner;
import static java.lang.System.*;

public class Maze
{
   private int[][] maze;
   private boolean exitFound;

	public Maze()
	{
		exitFound = false;
		maze = new int[0][0];
	}

	public Maze(int size, String line)
	{
		

	}

	public boolean hasExitPath(int r, int c)
	{
		if (r < maze.length && c < maze.length && r >= 0 && c >= 0 && maze[r][c] == 1)
		{
			maze[r][c] = 2;
			if (c == maze.length - 1)
			{
				exitFound = true;
			}
			else
			{
				if (c < maze.length - 1)
					hasExitPath(r, c + 1);
				if (c > 0)
					hasExitPath(r, c - 1);
				if (r < maze.length - 1)
					hasExitPath(r + 1, c);
				if (r > 0)
					hasExitPath(r - 1, c);				
			}
		}

		return exitFound;
	}

	public String toString()
	{
		String output="";
		




		return output;
	}
}